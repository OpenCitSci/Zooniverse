.zooniverse-top-bar
  background: #1c1c1c
  color: #fff
  font: bold 11px "Helvetica Neue", Arial, Helvetica, sans-serif
  height: 30px
  padding: 5px
  position: absolute
  right: 0
  text-shadow: 0 1px 1px #000
  top: 0

  &:before
    border-color: #1c1c1c #1c1c1c transparent transparent
    border-style: solid
    border-width: 20px 10px
    content: ""
    height: 0
    position: absolute
    right: 100%
    top: 0
    width: 0

  a
    color: inherit
    text-decoration: none

  button
    background: transparent
    border: 0
    color: inherit
    cursor: pointer
    font: inherit
    margin: 0
    padding: 0
    text-shadow: inherit

  .no-user
    display: block
    margin-top: 7px

    .zooniverse,
    .sign-in
      display: inline-block
      margin: 0 15px
      vertical-align: middle

    .zooniverse
      font-size: 13px

    .sign-in
      font-size: 10px
      text-transform: uppercase

  .current-user
    display: none

    .messages,
    .info,
    .avatar
      display: inline-block
      margin: 0 15px
      vertical-align: middle

    .messages
      margin-top: -3px

      .message-count
        color: inherit

    .info
      line-height: 1
      margin-top: -3px
      text-align: right

      .current-user-name
        font-size: 13px
        font-weight: bold
        line-height: 1

      button
        font-size: 8px
        text-transform: uppercase

    .avatar
      margin: 0

      img
        height: 30px
        width: 30px

  &.signed-in
    .no-user
      display: none

    .current-user
      display: block

  .zooniverse-login-form
    button[name="sign-out"]
      display: none
