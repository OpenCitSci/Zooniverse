.zooniverse-dialog
  font-size: 10px
  height: 100%
  left: 0
  position: fixed
  top: 0
  width: 100%
  display: block;

  &.hidden
    display: none

  .underlay
    background: rgba(#000, 0.33)
    display: table
    width: 100%
    height: 100%

    .container
      display: table-cell
      text-align: center
      vertical-align: middle

      .dialog
        background: #f4f4f4
        border-top: 5px solid #050505
        box-shadow: 0 3px 5px rgba(#000, 0.5)
        display: inline-block
        max-width: 33%
        padding: 30px
        text-align: left
        transition: transform 0.25s ease-out

  header
    font-size: 16px

  label
    display: block
    margin: 10px 0

  input
    background: #f0f0f0
    border: 1px solid #e1e1e1
    box-sizing: border-box
    box-shadow: 0 1px 0 #fff
    padding: 10px

    &:first-child
      width: 100%

  .error-message
    color: darken(#f00, 50%)
    font-weight: bold
    text-align center

  .action
    margin: 10px 0
    text-align: center
