$background = #f9f8f3
$text-color = #ddd
$border-color = #555

.zooniverse-top-bar
  background: $background
  color: $text-color
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif 
  width: 100%
  position: absolute
  top: 0 
  left: 0

  #zooniverse-top-bar-container
    margin-left: 30px

    #zooniverse-top-bar-info
      border-right: 1px $border-color solid
      float: left
      width: ($one-half + $gutter-size)

    #zooniverse-top-bar-projects
      float: left
      width: ($one-half + $gutter-size)

    #zooniverse-top-bar-login
      display: block
      float: left

  #zooniverse-top-bar-button
    padding: 10px
